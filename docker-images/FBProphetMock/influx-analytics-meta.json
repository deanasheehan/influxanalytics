{
	"name" : "Facebook Prophet",
	"tags" : [
		"Machine Learning",
		"Forecasting",
		"Lang=R"
	],
	"description" : "The Facebook Prophet Algorithm for seasonal forecasting",
	"actions" : [
		{
			"formType" : "forecast", "comment" : "this is a hack for current lack of use of dynamic forms",
			"name" : "Generate Forecast",
			"help" : "Prepare a forecast according to the input data and forecast parameters",
			"parameters" : 
				[
					{
						"name" : "Days",
						"type" : "integer",
						"help" : "How many days in the future would you like to forecast for?",
						"default" : "365"
					}
				],
			"input" : {
				"help" : "Historical data to base forecast upon",
				"format" : "csv-file",
				"format-options" : {
					"location" : "./input.csv"
				},
				"fields" : [
					{
						"timestamp":true,
						"epoc":"d",
						"headerLabel":"ds",
						"format":"\"isoDate\""
					},
					{
						"headerLabel":"y"
					}
				]
			},
			"output" : {
				"help" : "Destination for the forecat results",
				"format" : "csv-file",
				"format-options" : {
					"location" : "./output.csv"
				},
				"fields" : [
					{
						"ignore":true
					},
					{
						"timestamp":true,
						"epoc":"d"
					},
					"trend",
					"additive_terms",
					"additive_terms_lower",
					"additive_terms_upper",
					"weekly","weekly_lower",
					"weekly_upper",
					"yearly",
					"yearly_lower",
					"yearly_upper",
					"multiplicative_terms",
					"multiplicative_terms_lower",
					"multiplicative_terms_upper",
					"yhat_lower",
					"yhat_upper",
					"trend_lower",
					"trend_upper",
					"yhat"
				]
			}
		}
	]
}
